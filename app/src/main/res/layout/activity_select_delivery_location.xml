<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account.SelectDeliveryLocation">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cairo_semibold"
            android:text="Select delivery Location"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="250dp"
            android:src="@drawable/edit_address_icon" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/header"
        android:background="@color/grey" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/header"
        android:padding="20dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/defaultDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Address"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/cairo_semibold"
                />
            <TextView
                android:id="@+id/default_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Not saved yet"
                android:textSize="15sp"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginTop="35dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:id="@+id/primaryDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary Address"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/cairo_semibold"
                />
            <TextView
                android:id="@+id/primary_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Not saved yet"
                android:textSize="15sp"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginTop="35dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>
        <RelativeLayout
            android:id="@+id/secondaryDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Secondary Address"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:fontFamily="@font/cairo_semibold"
                />
            <TextView
                android:id="@+id/secondary_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address Not saved yet"
                android:textSize="15sp"
                android:fontFamily="@font/cairo_semibold"
                android:layout_marginTop="35dp"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>


    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/city_map_icon"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>